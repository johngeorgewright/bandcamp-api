{
  "name": "@oldgods/bandcamp",
  "version": "0.0.0",
  "description": "Bandcamp API",
  "private": true,
  "type": "module",
  "main": "./dist/common/index.js",
  "module": "./dist/es/index.js",
  "bin": {
    "bandcamp": "./dist/cli/run.js"
  },
  "scripts": {
    "build": "npm run clean && tsc && tsc --project tsconfig.common.json",
    "clean": "rimraf dist",
    "cli": "node --no-warnings --loader ts-node/esm src/cli/run.ts",
    "prepare": "husky install",
    "start": "concurrently --names es 'tsc --watch --preserveWatchOutput'",
    "test": "ts-node-test test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Old-Gods/bandcamp.git"
  },
  "keywords": [],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Old-Gods/bandcamp/issues"
  },
  "homepage": "https://github.com/Old-Gods/bandcamp#readme",
  "devDependencies": {
    "@commitlint/cli": "18.4.4",
    "@commitlint/config-conventional": "18.4.4",
    "@commitlint/types": "18.4.4",
    "@semantic-release/commit-analyzer": "11.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "12.1.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "20.10.6",
    "@types/semantic-release": "20.0.6",
    "@types/source-map-support": "0.5.10",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.3.1",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "nodemon": "3.0.2",
    "prettier": "3.1.1",
    "renamer": "4.0.0",
    "rimraf": "5.0.5",
    "semantic-release": "22.0.12",
    "source-map-support": "0.5.21",
    "ts-node": "10.9.2",
    "ts-node-test": "0.4.3",
    "typanion": "^3.14.0",
    "typescript": "5.3.3",
    "zod": "3.22.4"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "npx prettier --ignore-path .gitignore --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "axios": "^1.6.5",
    "clipanion": "^4.0.0-rc.2",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "ora": "^8.0.1",
    "tslib": "^2.6.2",
    "yaml": "^2.3.4",
    "zod-guard": "^2.0.0"
  },
  "peerDependencies": {
    "zod": "^3.22.4"
  }
}
